<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- link to Bootstrap CSS for styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- link to Bootstrap JS for functionality -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- link to custom stylesheet -->
  <link rel="stylesheet" href="/styles/style.css">
  <title>Student Progress</title>
  <style>
    /* style for the progress bar container */
    .progress-bar {
      width: 75%;
      margin: 0 auto;
    }
    /* style for checkpoints on the progress bar */
    .checkpoint {
      position: relative;
      height: 40px;
      width: 2px;
      background-color: black;
      margin-left: -1px;
    }
    /* style for checkpoint labels */
    .checkpoint-label {
      position: absolute;
      top: 10px;
    }
  </style>
</head>
<body>
  <!-- navigation bar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Tutoring App</a>
      <!-- collapsible button for smaller screens -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

  <div class="container">
    <br>
    <!-- page header -->
    <div class="text-center"><h2>Student Progress</h2></div>
    <br>

    <!-- progress bar with checkpoints -->
    <div class="progress" style="height: 40px; position: relative;">
      <!-- dynamic progress bar -->
      <div id="progress-bar" class="progress-bar bg-success" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
      <!-- checkpoint markers -->
      <div class="checkpoint" style="left: 10%;"></div>
      <div class="checkpoint" style="left: 25%;"></div>
      <div class="checkpoint" style="left: 50%;"></div>
    </div>
    <!-- labels for checkpoints -->
    <div class="text-center mt-2">
      <span class="checkpoint-label" style="left: 10%;">Math - Chapter 1 (10 points)</span>
      <span class="checkpoint-label" style="left: 25%;">Math - Chapter 2 (15 points)</span>
      <span class="checkpoint-label" style="left: 50%;">Math - Chapter 3 (20 points)</span>
    </div>
  
    <!-- Task 1 card -->
    <div class="card mt-4">
      <div class="card-header">
        Task 1
      </div>
      <div class="card-body">
        <h5 class="card-title">Math - Chapter 1</h5>
        <p class="card-text">Points: 10</p>
        <!-- button to mark task as completed/not completed -->
        <button id="task1" class="btn btn-danger" onclick="toggleCompletion(this, 50);">Not Completed</button>
      </div>
    </div>
    <br>
    <!-- Task 2 card -->
    <div class="card">
      <div class="card-header">
        Task 2
      </div>
      <div class="card-body">
        <h5 class="card-title">Math - Chapter 2</h5>
        <p class="card-text">Points: 15</p>
        <!-- button to mark task as completed/not completed -->
        <button id="task2" class="btn btn-danger" onclick="toggleCompletion(this, 100);">Not Completed</button>
      </div>
    </div>
    <!-- back to index button -->
    <div class="text-center mt-3">
        <a href="/indexStudent" class="btn btn-primary">Back to Index</a>
    </div>
  </div>
  <script>
    let completedTasks = 0; // counter for completed tasks

    /* function to toggle task completion status */
    function toggleCompletion(button, progressValue) {
      if (button.classList.contains('btn-danger')) {
        // if the task is marked as not completed, mark it as completed
        button.classList.remove('btn-danger');
        button.classList.add('btn-success');
        button.textContent = 'Completed';
        completedTasks++;
      } else {
        // if the task is marked as completed, mark it as not completed
        button.classList.remove('btn-success');
        button.classList.add('btn-danger');
        button.textContent = 'Not Completed';
        completedTasks--;
      }
      // update the width of the progress bar based on completed tasks
      document.getElementById('progress-bar').style.width = (completedTasks * 50) + '%';
    }
  </script>
</body>
</html>

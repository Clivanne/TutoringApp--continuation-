<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Tutoring App</title>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Tutoring App</a>
            <!-- navbar Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- navbar Items -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/addStudent">Add new student</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <br>
        <div class="text-center"><h2>Add New Student</h2></div>
        <br>
        <div class="text-center">
            <!-- form to Add Student -->
            <form action="/addstudent" method="POST" enctype="multipart/form-data">
                <!-- student Name -->
                <label for="name">Student Name:</label><br>
                <input type="text" id="name" name="name" required><br><br>

                <!-- schedule -->
                <label for="schedule">Schedule:</label><br>
                <input type="text" id="schedule" name="schedule" required><br><br>

                <!-- points Earned -->
                <label for="points_earned">Points Earned:</label><br>
                <input type="number" id="points_earned" name="points_earned" required><br><br>

                <!-- Subject -->
                <label for="subject">Subject:</label><br>
                <input type="text" id="subject" name="subject" required><br><br>

                <!-- contact -->
                <label for="contact">Contact:</label><br>
                <input type="text" id="contact" name="contact" required><br><br>

                <!-- image Upload -->
                <label for="image">Image:</label><br>
                <input type="file" id="image" name="image" accept="image/*" required><br><br>

                <!-- submit Button -->
                <button type="submit" class="btn btn-primary">Add Student</button>
            </form>
        </div>
    </div>
</body>
</html>

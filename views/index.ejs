<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- bootstrap JS script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- custom CSS file -->
  <link href="/styles/styles.css" rel="stylesheet">
  <title>Tutoring App</title>
</head>
<body>
  <!-- navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Tutoring App</a>
      <!-- navbar toggler for responsive design -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <!-- navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addStudent">Add new student</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/reward">Rewards</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- main content -->
  <div class="container">
    <br>
    <div class="text-center"><h2>Students from Tutoring App Database</h2></div>
    <br>
  
    <!-- table to display students -->
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <!-- table headers -->
          <th width="100">Student ID</th>
          <th width="100">Name</th>
          <th width="100">Schedule</th>
          <th width="100">Points Earned</th>
          <th width="100">Subject</th>
          <th width="100">Contact</th>
          <th width="100">Image</th>
          <th width="100">View</th>
          <th width="100">Edit</th>
          <th width="100">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < students.length; i++) { %>
          <!-- loop through students and display each row -->
          <tr>
            <td><%= students[i].student_id %></td>
            <td><%= students[i].name %></td>
            <td><%= students[i].schedule %></td>
            <td><%= students[i].points_earned %></td>
            <td><%= students[i].subject %></td>
            <td><%= students[i].contact %></td>
            <td><img src="/images/<%= students[i].image %>" width="50"></td>
            <!-- links for View, Edit, and Delete -->
            <td><a href="/student/<%= students[i].student_id %>">View</a></td>
            <td><a href="/editStudent/<%= students[i].student_id %>">Edit</a></td>
            <td><a href="/deleteStudent/<%= students[i].student_id %>" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>

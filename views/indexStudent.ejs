<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- bootstrap JS script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- custom CSS file -->
  <link rel="stylesheet" href="/styles/style.css">
  <title>Student Dashboard</title>
</head>
<body>
  <!-- navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Tutoring App</a>
      <!-- navbar toggler for responsive design -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

  <div class="container">
    <br>
    <!-- page header -->
    <div class="text-center"><h2>Student Dashboard</h2></div>
    <br>
    
    <!-- points Earned Card -->
    <div class="card text-center">
      <div class="card-header">
        Points Earned
      </div>
      <div class="card-body">
        <!-- points value -->
        <h5 class="card-title">100</h5>
      </div>
    </div>

    <!-- Task 1 Card -->
    <div class="card">
      <div class="card-header">
        Task 1
      </div>
      <div class="card-body">
        <h5 class="card-title">Math - Chapter 1</h5>
        <!-- deadline for task -->
        <p class="card-text">Deadline: 2024-07-20</p>
        <!-- points for task -->
        <p class="card-text">Points: 10</p>
      </div>
    </div>
    <br>
    
    <!-- Task 2 Card -->
    <div class="card">
      <div class="card-header">
        Task 2
      </div>
      <div class="card-body">
        <h5 class="card-title">Math - Chapter 2</h5>
        <!-- deadline for task -->
        <p class="card-text">Deadline: 2024-07-25</p>
        <!-- points for task -->
        <p class="card-text">Points: 15</p>
      </div>
    </div>

    <!-- link to view progress -->
    <div class="text-center">
      <br>
      <a href="/progressStudent" class="btn btn-secondary">View Progress</a>
    </div>
  </div>
</body>
</html>

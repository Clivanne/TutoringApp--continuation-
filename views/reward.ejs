<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!-- sets the character encoding of the document to UTF-8 -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- ensures the webpage is responsive and sets the width to the device width -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- includes Bootstrap CSS for styling -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- includes Bootstrap JavaScript bundle for functionality -->
  <title>Tutoring App - Rewards</title>
  <!-- sets the title of the webpage -->
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <!-- creates a dark-themed navbar -->
      <div class="container-fluid">
        <!-- ensures the navbar is fluid and responsive -->
        <a class="navbar-brand" href="/">Tutoring App</a>
        <!-- brand link to the home page -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- toggle button for collapsing the navbar on smaller screens -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <!-- collapsible part of the navbar -->
          <ul class="navbar-nav">
            <!-- list of navbar items -->
            <li class="nav-item">
              <a class="nav-link" href="/addStudent">Add new student</a>
              <!-- link to add a new student -->
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/reward">Rewards</a>
              <!-- link to view rewards -->
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  
    <div class="container">
      <!-- container for the main content -->
      <br>
      <div class="text-center"><h2>Rewards from Tutoring App Database</h2></div>
      <!-- header for the rewards section -->
      <br>
    
      <table class="table table-hover small text-center">
        <!-- bootstrap table with hover effect and centered text -->
        <thead>
            <!-- table header -->
            <tr>
              <th width="100">Reward ID</th>
              <!-- column for Reward ID with fixed width -->
              <th width="100">Reward Name</th>
              <!-- column for Reward Name with fixed width -->
              <th width="100">Points Needed</th>
              <!-- column for Points Needed with fixed width -->
              <th width="100">Reward Image</th>
              <!-- column for Reward Image with fixed width -->
              <th width="100">Actions</th>
              <!-- column for actions with fixed width -->
            </tr>
        </thead>
        <tbody>
          <!-- table body containing the reward data -->
          <% for(let i = 0; i < reward.length; i++) { %>
            <!-- loop through the rewards array and create a row for each reward -->
            <tr>
              <td><%= reward[i].reward_id %></td>
              <!-- reward ID -->
              <td><%= reward[i].reward_name %></td>
              <!-- reward Name -->
              <td><%= reward[i].points_needed %></td>
              <!-- points Needed -->
              <td><img src="/images/<%= reward[i].reward_image %>" width="50"></td>
              <!-- reward Image, displayed with a width of 50 pixels -->
              <td>
                <a href="/rewarded/<%= reward[i].reward_id %>" class="btn btn-success">Reward</a>
                <!-- link to the reward action page for the specific reward, styled as a success button -->
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <!-- end of the rewards table -->
    </div>
    <!-- end of the main content container -->
</body>
</html>
